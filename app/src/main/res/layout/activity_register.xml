<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wp_2"

    tools:context=".Register">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <TextView
            android:id="@+id/register_tite_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:shadowColor="#406DC6"
            android:shadowDx="5"
            android:shadowDy="5"
            android:shadowRadius="15"
            android:text="Register"
            android:textColor="#B56DC1"
            android:textSize="48sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/register_register_button"
            android:layout_width="153dp"
            android:layout_height="60dp"
            android:layout_marginTop="40dp"
            android:onClick="Registerfunction"
            android:rotation="-2"
            android:rotationX="10"
            android:shadowColor="#FF0000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="20"
            android:text="Register"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/imageView4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/loginpassword3"
            app:layout_constraintVertical_bias="0.0"
            app:strokeColor="#454444"
            app:strokeWidth="1dp" />

        <EditText
            android:id="@+id/loginpassword3"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginTop="70dp"
            android:background="#22FFFFFF"
            android:ems="10"
            android:inputType="numberPassword"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/loginuserid3" />

        <TextView
            android:id="@+id/register_password_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="16dp"
            android:shadowColor="#000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="5"
            android:text="Password"
            android:textColor="#FF5722"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/loginpassword3"
            app:layout_constraintStart_toStartOf="@+id/loginpassword3" />

        <TextView
            android:id="@+id/register_userid_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="16dp"
            android:shadowColor="#000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="5"
            android:text="Username"
            android:textColor="#F7FF00"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/loginuserid3"
            app:layout_constraintStart_toStartOf="@+id/loginuserid3" />

        <EditText
            android:id="@+id/loginuserid3"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginTop="100dp"
            android:background="#22FFFFFF"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/register_tite_text" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="96dp"
            android:layout_height="83dp"
            android:rotation="20"
            app:layout_constraintBottom_toTopOf="@+id/register_password_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/loginpassword3"
            app:layout_constraintTop_toBottomOf="@+id/loginuserid3"
            app:layout_constraintVertical_bias="0.152"
            app:srcCompat="@drawable/star" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="86dp"
            android:layout_height="77dp"
            android:rotation="-20"
            app:layout_constraintBottom_toTopOf="@+id/register_tite_text"
            app:layout_constraintEnd_toStartOf="@+id/register_tite_text"
            app:layout_constraintHorizontal_bias="0.516"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView5"
            app:layout_constraintVertical_bias="1.0"
            app:srcCompat="@drawable/star" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="177dp"
            android:layout_height="129dp"
            android:layout_marginStart="-25dp"
            android:rotation="-20"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/loginpassword3"
            app:layout_constraintVertical_bias="0.705"
            app:srcCompat="@drawable/test" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="137dp"
            android:layout_height="106dp"
            android:rotationX="37"
            app:layout_constraintBottom_toTopOf="@+id/register_tite_text"
            app:layout_constraintStart_toEndOf="@+id/register_tite_text"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/moon" />

        <TextView
            android:id="@+id/regerror"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:shadowColor="#000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="7"
            android:text="User already exist"
            android:textColor="#00C853"
            android:textSize="20sp"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@+id/register_register_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/loginpassword3" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#52686285"
        android:minHeight="?attr/actionBarSize"
        android:textAlignment="center"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:subtitleTextColor="#E084EF"
        app:titleTextColor="#E084EF" />

</androidx.constraintlayout.widget.ConstraintLayout>